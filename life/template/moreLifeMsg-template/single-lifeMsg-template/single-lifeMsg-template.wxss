.single-contain {
  height: 400rpx;
  width: 295rpx;
  overflow: hidden;
  border-radius: 10rpx;
  background: rgba(0, 0, 0, 0.3);
  padding-left: 20rpx;
  padding-right: 20rpx;
}

.avatarUrl {
  width: 80rpx;
  height: 80rpx;
  margin-left: 20rpx;
  margin-top: 15rpx;
  border-radius: 120rpx;
}

.avatarUrlFaded {
  position: absolute;
  width: 330rpx;
  height: 399rpx;
  z-index: -98;
  -webkit-filter: blur(5rpx);
  margin-left: -117rpx;
  border-radius: 10rpx;
}

.tooltext {
  display: flex;
  flex-direction: column;
  margin-left: 10rpx;
  margin-top: 20rpx;
  height: 100%;
  width: 400rpx;
  color: black;
}

.lifeMsg {
  height: 756rpx;
  width: 531rpx;
  padding: 30rpx 10rpx 0rpx 10rpx;
  letter-spacing: 5rpx;
  font-size: 35rpx;
  border: 1px solid rgba(0, 0, 0, 0.5);
  text-align: center;
  border-radius: 10rpx;
}

.timetool {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 100%;
  margin-top: 8rpx;
}

.tuibuMsg {
  height: 300rpx;
  width: 200rpx;
  padding-left: 43rpx;
  font-size: 26rpx;
  color: white;
}

.tptext {
  font-size: 20rpx;
  margin-top: 16rpx;
  letter-spacing: 5rpx;
}

.time {
  font-size: 20rpx;
  letter-spacing: 5rpx;
  color: black;
  margin-top: 18rpx;
  margin-left: 10rpx;
}

.like {
  position: absolute;
  right: 45rpx;
  width: 60rpx;
  height: 60rpx;
}
