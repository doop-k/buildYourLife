.single-tuibu-view {
  direction: flex;
  flex-direction: column;
  width: 700rpx;
  margin-left: 25rpx;
  height: auto;
  border: 1rpx solid black;

  border-radius: 10rpx 10rpx 0rpx 0rpx;
  padding-top: 50rpx;
}

.delbtn {
  width: 650rpx;
  margin-left: 55rpx;
  border: 1rpx solid #ff675b;
  height: 60rpx;
  line-height: 60rpx;
  color: #ff675b;
  border-radius: 0rpx 0rpx 15rpx 15rpx;
  background: white;
}

button::after {
  border: none;
}

.lifeMsg-text {
  height: auto;
  width: 100%;
  margin-left: 40rpx;
  margin-bottom: 40rpx;
  letter-spacing: 5rpx;
  font-size: 30rpx;
}

.lifeMsgAge-view {
  width: 100%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  margin-top: 100rpx;
}

.data-view {
  margin-left: 40rpx;
  width: 120rpx;
  height: 80rpx;
  line-height: 80rpx;
}

.dynamic-text {
  font-size: 35rpx;
  color: white;
}

.default-text {
  margin-left: 8rpx;
  font-size: 25rpx;
  color: white;
}

.like-img {
  margin-top: 8rpx;
  width: 60rpx;
  height: 60rpx;
  margin-left: 40%;
}

.time-text {
  font-size: 25rpx;
  color: #000;
  margin-top: 100rpx;
  position: absolute;
  right: 60rpx;
}
