.single-tuibu-view {
  direction: flex;
  flex-direction: column;
  width: 660rpx;
  margin-left: 25rpx;
  height: auto;
  border-radius: 10rpx 10rpx 0rpx 0rpx;
  border-bottom: none;
  padding:50rpx 20rpx  0rpx 20rpx;
}

.delbtn {
  width: 650rpx;
  margin-left: 55rpx;
  border: 1rpx solid #ff675b;
  border-top:none;
  height: 60rpx;
  line-height: 60rpx;
  color: #ff675b;
  border-radius: 0rpx 0rpx 15rpx 15rpx;
  background: white;
  font-size: 26rpx;
}
.delbtn:active{
background: rgba(0,0,0,0.1);
}

button::after {
  border: none;
}

.lifeMsg-text {
  height: auto;
  width: 100%;
  margin-left: 40rpx;
  margin-bottom: 40rpx;
  letter-spacing: -1rpx;
  font-size: 30rpx;
  color:#666;
}

.lifeMsgAge-view {
  width: 700rpx;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  margin-top: 100rpx;
  justify-content: space-around;
  margin-left:-20rpx;
}

.data-view {
  margin-left: 40rpx;
  width: 120rpx;
  height: 80rpx;
  line-height: 80rpx;
}

.dynamic-text {
  font-size: 26rpx;
  color: white;
}

.default-text {
  margin-left: 8rpx;
  font-size: 26rpx;
  color: white;
}

.like-img {
  margin-top: 8rpx;
  width: 60rpx;
  height: 60rpx;
  margin-left: 40%;
}

.time-text {
  font-size: 25rpx;
  color: #666;
  margin-top: 100rpx;
  position: absolute;
  right: 60rpx;
}
